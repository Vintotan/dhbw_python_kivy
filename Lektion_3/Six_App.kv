<MyGrid>:

    first_name: first_name
    last_name: last_name
    email: email
    
    GridLayout:
        cols:2
        size: root.width, root.height
        
        GridLayout:
            cols:2
            
            Label:
                text: "First Name: "
                
            TextInput:
                id: first_name
                multiline: False
                
            Label:
                text: "Last Name: "
                
            TextInput:
                id: last_name
                multiline: False
                
            Label:
                text: "Email: "
                
            TextInput:
                id: email
                multiline: False
                
        Button:
            text: "Submit"